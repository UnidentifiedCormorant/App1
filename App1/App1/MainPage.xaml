<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="THSearcher" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="nameOfTeacher" Placeholder="Введите имя преподавателя"></Entry>
        <Button x:Name="giveName" Text="Поиск"></Button>
        <Button x:Name="giveNameByBackend" Text="Быстрый тест моего гениального API"></Button>
        <Button x:Name="giveNoticedTeachers" Text="Показать избранных преподавателей"></Button>
    </StackLayout>

</ContentPage>
